<h1><%= @task.title %></h1>
<%= link_to "Edit", task_edit_path(@task) %>
<p class="descriptions"><%= @task.details %></p>
<p><input type="checkbox"> <%= @task.completed %></p>
<br>
<%= link_to "Back to list", tasks_path, class: "no_underline" %>
<%= link_to "Remove",
  task_id_path(@task),
  data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }
%>
